scope: postgres
namespace: /pg_cluster/
name: pg_{{ inventory_hostname }}

restapi:
    listen: {{ ansible_default_ipv4.address }}:8008
    connect_address: {{ ansible_default_ipv4.address }}:8008

etcd:
    host: {{ hostvars[ etcd01 ]['ansible_default_ipv4']['address'] }}:2379
    host: {{ hostvars[ etcd02 ]['ansible_default_ipv4']['address'] }}:2379
    host: {{ hostvars[ etcd03 ]['ansible_default_ipv4']['address'] }}:2379

bootstrap:
  dcs:
    ttl: 30
    loop_wait: 10
    retry_timeout: 10
    maximum_lag_on_failover: 1048576
    postgresql:
      use_pg_rewind: true
      use_slots: true
      parameters:

  initdb:
  - encoding: UTF8
  - data-checksums

  pg_hba:
  - host replication replicator 127.0.0.1/32 md5
  - host replication replicator {{ hostvars[ postgre01 ]['ansible_default_ipv4']['address'] }}/0 md5
  - host replication replicator {{ hostvars[ postgre02 ]['ansible_default_ipv4']['address'] }}/0 md5
  - host replication replicator {{ hostvars[ postgre03 ]['ansible_default_ipv4']['address'] }}/0 md5
  - host all all 0.0.0.0/0 md5

  users:
    admin:
      password: admin
      options:
        - createrole
        - createdb

postgresql:
  listen: {{ ansible_default_ipv4.address }}:5432
  connect_address: {{ ansible_default_ipv4.address }}:5432
  data_dir: /pg01/pgdatadir
  bin_dir: /usr/pgsql-12/bin
  pgpass: /tmp/pgpass
  authentication:
    replication:
      username: replicator
      password: replicator
    superuser:
      username: postgres
      password: postgres

tags:
    nofailover: false
    noloadbalance: false
    clonefrom: false
    nosync: false
